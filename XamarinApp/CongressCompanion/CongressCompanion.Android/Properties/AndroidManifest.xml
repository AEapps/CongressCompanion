<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.aeapps.CongressCompanion" android:installLocation="preferExternal" android:versionCode="3" android:versionName="1.2">
	<uses-sdk android:minSdkVersion="10" />
	<!-- Google Maps for Android v2 requires OpenGL ES v2 -->
	<uses-feature android:glEsVersion="0x00020000" android:required="true" />
	<!-- We need to be able to download map tiles and access Google Play Services-->
	<uses-permission android:name="android.permission.INTERNET" />
	<!-- Allow the application to access Google web-based services. -->
	<!-- Google Maps for Android v2 will cache map tiles on external storage -->
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<!-- Google Maps for Android v2 needs this permission so that it may check the connection state as it must download data -->
	<!-- Permission to receive remote notifications from Google Play Services -->
	<!-- Notice here that we have the package name of our application as a prefix on the permissions. -->
	<permission android:name="com.aeapps.CongressCompanion.permission.MAPS_RECEIVE" android:protectionLevel="signature" />
	<!-- These are optional, but recommended. They will allow Maps to use the My Location provider. -->
	<application android:label="Congress Companion" android:icon="@drawable/CongressIcon">
		<meta-data android:name="com.google.android.geo.API_KEY" android:value="AIzaSyDi4NE7X-itw0B8qu9Fk-VtN9dSSZybMLE" />
	</application>
</manifest>